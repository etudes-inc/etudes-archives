<project>
	<pomVersion>3</pomVersion>
	<extend>../../project.xml</extend>
	<name>etudes-archives-pack</name>
	<groupId>etudes</groupId>
	<id>etudes-archives-pack</id>
	<currentVersion>${archives.version}</currentVersion>
	<organization>
		<name>Etudes, Inc.</name>
		<url>http://etudes.org/archives</url>
	</organization>
	<inceptionYear>2007</inceptionYear>

	<properties>
		<!-- deploy as a components -->
		<deploy.type>components</deploy.type>
	</properties>

	<dependencies>

		<dependency>
			<groupId>etudes</groupId>
			<artifactId>etudes-archives-impl</artifactId>
			<version>${archives.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>etudes</groupId>
			<artifactId>etudes-ambrosia-util</artifactId>
			<version>${ambrosia.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>etudes</groupId>
			<artifactId>etudes-util</artifactId>
			<version>1.0</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>concurrent</groupId>
			<artifactId>concurrent</artifactId>
			<version>1.3.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

	</dependencies>

	<build>

		<!-- java source -->
		<sourceDirectory>src/java</sourceDirectory>

	</build>

</project>
